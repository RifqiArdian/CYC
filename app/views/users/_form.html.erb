<%= form_with model: @user, local: true do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> data gagal disimpan
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <stong>Diisi dengan NIM/No KTP/No Induk Pelajar</stong><br>
    <%= form.text_field :nim %>
  </p>

  <p>
    <%= form.label :nama %><br>
    <%= form.text_field :nama %>
  </p>

  <p>
    <%= form.radio_button :jenis_kelamin, 'Laki-laki' %>
    <%= label :jenis_kelamin_Laki_laki, 'Laki-laki' %>
    <%= form.radio_button :jenis_kelamin, 'Perempuan' %>
    <%= label :jenis_kelamin_perempuan, 'Perempuan' %>
  </p>

  <p>
    <%= form.label :alamat %><br>
    <%= form.text_area :alamat %>
  </p>

  <p>
    <%= form.label :tempat_lahir %><br>
    <%= form.text_field :tempat_lahir %>
  </p>

  <p>
    <%= form.label :tanggal_lahir %><br>
    <%= form.date_field :tgl_lahir %>
  </p>

  <p>
    <%= form.label :no_telepon %><br>
    <%= form.telephone_field :no_telepon %>
  </p>  

  <p>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.label :profile_picture %><br>
    <%= form.file_field :profile_picture %>
    <% if form.object.profile_picture? %>
      <%= image_tag form.object.profile_picture.thumb.url %>
      <%= form.label :remove_profile_picture %>
      <%= form.check_box :remove_profile_picture %> 
    <% end %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
