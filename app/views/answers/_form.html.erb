<%= form_for @answer, url: {controller: "answers", action: "create"} do |f| %>
  <% @count = 1 %>
  <% @answers.each do |answer| %>
    <%= answer.no %>
    <%= answer.pertanyaan %><br>
    <%= f.radio_button :"jawaban_#{@count}", 'A' %>
    <%= answer.pilihan_A %>
    <%= f.radio_button :"jawaban_#{@count}", 'B' %>
    <%= answer.pilihan_B %>
    <%= f.radio_button :"jawaban_#{@count}", 'C' %>  
    <%= answer.pilihan_C %>
    <%= f.radio_button :"jawaban_#{@count}", 'D' %>
    <%= answer.pilihan_D %><br><br>
    <% @count += 1 %>
  <% end %>
  <%= f.submit %>
<% end %>

